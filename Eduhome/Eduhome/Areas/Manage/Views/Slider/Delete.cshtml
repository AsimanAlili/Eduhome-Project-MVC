@model Slider

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h2 style="color:red;font:bold">Delete</h2>
    <div class="card-group">
        <div class="card">
            <img src="~/uploads/sliders/@Model.Photo" class="card-img-top" alt="slider">
            <div class="card-body">
                <h5 class="card-title">Title: @Model.Title</h5>
                <p class="card-text">Desc: @Model.Text</p>
                <p class="card-text">Url: @Model.RedirectUrl</p>
                <p class="card-text">Order: @Model.Order</p>
            </div>
        </div>
    </div>
    <form method="post" asp-action="delete">
        <input name="id" value="@Model.Id" hidden />
        <button type="submit" class="btn btn-danger"> Delete</button>
    </form>
</div>
