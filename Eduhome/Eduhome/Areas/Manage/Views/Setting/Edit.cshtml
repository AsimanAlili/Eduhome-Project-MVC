@model Setting
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h2 style="color:dodgerblue;font:bold">Edit</h2>
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.Title"></label>
                <input class="form-control" asp-for="@Model.Title">
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.ServicePhone"></label>
                <input class="form-control" asp-for="@Model.ServicePhone">
                <span asp-validation-for="@Model.ServicePhone" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.Phone"></label>
                <input class="form-control" asp-for="@Model.Phone">
                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.Address"></label>
                <input class="form-control" asp-for="@Model.Address">
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.Email"></label>
                <input class="form-control" asp-for="@Model.Email">
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.WebSiteUrl"></label>
                <input class="form-control" asp-for="@Model.WebSiteUrl">
                <span asp-validation-for="@Model.WebSiteUrl" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.FacebookUrl"></label>
                <input class="form-control" asp-for="@Model.FacebookUrl">
                <span asp-validation-for="@Model.FacebookUrl" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.TwitterUrl"></label>
                <input class="form-control" asp-for="@Model.TwitterUrl">
                <span asp-validation-for="@Model.TwitterUrl" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.VimeoUrl"></label>
                <input class="form-control" asp-for="@Model.VimeoUrl">
                <span asp-validation-for="@Model.VimeoUrl" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.PinteresUrl"></label>
                <input class="form-control" asp-for="@Model.PinteresUrl">
                <span asp-validation-for="@Model.PinteresUrl" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.VideoUrl"></label>
                <input class="form-control" asp-for="@Model.VideoUrl">
                <span asp-validation-for="@Model.VideoUrl" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.AboutTitle"></label>
                <input class="form-control" asp-for="@Model.AboutTitle">
                <span asp-validation-for="@Model.AboutTitle" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group">
            <label asp-for="@Model.FooterDesc"></label>
            <textarea class="form-control" asp-for="@Model.FooterDesc"></textarea>
            <span asp-validation-for="@Model.FooterDesc" rows="3" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.AboutDesc"></label>
            <textarea class="form-control" asp-for="@Model.AboutDesc"></textarea>
            <span asp-validation-for="@Model.AboutDesc" rows="3" class="text-danger"></span>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">

                <label asp-for="@Model.LogoFile"></label>
                <input class="form-control" asp-for="@Model.LogoFile">
                <span asp-validation-for="@Model.LogoFile" class="text-danger"></span>
                <div style="margin-top:8px" class="photo-box">
                    @if (Model.Logo != null)
                    {
                        <img style="max-width:150px" src="~/uploads/setting/@Model.Logo" alt="Alternate Text" />
                        <input asp-for="@Model.Logo" hidden />
                    }
                </div>

            </div>
            <div class="form-group col-md-6">

                <label asp-for="@Model.FooterLogoFile"></label>
                <input class="form-control" asp-for="@Model.FooterLogoFile">
                <span asp-validation-for="@Model.FooterLogoFile" class="text-danger"></span>
                <div style="margin-top:8px" class="photo-box">
                    @if (Model.FooterLogo != null)
                    {
                        <img style="max-width:150px" src="~/uploads/setting/@Model.FooterLogo" alt="Alternate Text" />
                        <input asp-for="@Model.FooterLogo" hidden />
                    }
                </div>

            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">

                <label asp-for="@Model.AboutFile"></label>
                <input class="form-control" asp-for="@Model.AboutFile">
                <span asp-validation-for="@Model.AboutFile" class="text-danger"></span>
                <div style="margin-top:8px" class="photo-box">
                    @if (Model.AboutPhoto != null)
                    {
                        <img style="max-width:150px" src="~/uploads/setting/@Model.AboutPhoto" alt="Alternate Text" />
                        <input asp-for="@Model.AboutPhoto" hidden />
                    }
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
</div>
@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
    <script>
        // Replace the <textarea id="editor1"> with a CKEditor 4
        // instance, using default configuration.
        CKEDITOR.replace('AboutDesc');
    </script>

}



