@model List<Teacher>
@foreach (var teacher in Model)
{
    <div class="col-md-3 col-sm-4 col-xs-12">
        <div class="single-teacher mb-45">
            <div class="single-teacher-img">
                <a asp-action="detail" asp-controller="teacher" asp-route-id="@teacher.Id"><img src="~/uploads/teachers/@teacher.Photo" alt="teacher"></a>
            </div>
            <div class="single-teacher-content text-center">
                <h2><a href="teacher-details.html">@teacher.FullName</a></h2>
                <h4>@teacher.TeachingStatus</h4>
                <ul>
                    <li><a href="@teacher.FacebookUrl"><i class="zmdi zmdi-facebook"></i></a></li>
                    <li><a href="@teacher.PinterestUrl"><i class="zmdi zmdi-pinterest"></i></a></li>
                    <li><a href="@teacher.VimeoUrl"><i class="zmdi zmdi-vimeo"></i></a></li>
                    <li><a href="@teacher.TwitterUrl"><i class="zmdi zmdi-twitter"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
}