@model Event
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
    List<Category> categories = ViewBag.Categories;
    List<Tag> tags = ViewBag.Tags;
    List<Teacher> teachers = ViewBag.Teachers;

}

<div class="container-fluid">
    <h2 style="color:red;font:bold">Delete</h2>
    <div class="card-group">
        <div class="card">
            <img src="~/uploads/events/@Model.Photo" class="card-img-top" style="max-width:250px;" alt="course image">
            <div class="card-body">
                <h5 class="card-title">Title: @Model.Title</h5>
                <p class="card-text">Venue: @Model.Venue</p>
                <p class="card-text">Event Date: @Model.Date.ToString("dd MMMM")</p>
                <p class="card-text">Start Date: @Model.StartTime.ToString("hh:mm tt")</p>
                <p class="card-text">End Date: @Model.EndTime.ToString("hh:mm tt")</p>
                <p class="card-text">Category: @Model.Category.Name</p>
                <p class="card-text">Desc: @Html.Raw(Model.Desc)</p>
                <div class="card-text bg-light" style="border-radius:5px">
                    Tags:
                    @foreach (var item in tags)
                    {
                        if (tags[tags.Count - 1] != item)
                        {
                            <p class="d-inline">@item.Name,</p>
                        }
                        else
                        {
                            <p class="d-inline">@item.Name</p>
                        }

                    }
                </div>
                <div class="card-text bg-light mt-2" style="border-radius:5px">
                    Teachers:
                    @foreach (var item in teachers)
                    {
                        if (teachers[teachers.Count - 1] != item)
                        {
                            <p class="d-inline">@item.FullName,</p>
                        }
                        else
                        {
                            <p class="d-inline">@item.FullName</p>
                        }

                    }
                </div>
            </div>
        </div>
    </div>
    <form method="post" asp-action="delete">
        <input name="id" value="@Model.Id" hidden />
        <button type="submit" class="btn btn-danger mt-md-2"> Delete</button>
    </form>
</div>


